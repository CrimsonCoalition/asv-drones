<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Asv.Drones.Gui.Core">
    <Design.PreviewWith>
        <controls:StringIndicator />
    </Design.PreviewWith>

    <Style Selector="controls|StringIndicator">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <TextBlock FontSize="10" Text="{TemplateBinding Title}" HorizontalAlignment="Center"/>
                    <TextBlock FontSize="14" Text="{TemplateBinding Value}" HorizontalAlignment="Center"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
