<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sdr="clr-namespace:Asv.Drones.Gui.Sdr"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:CompileBindings="True"
             x:DataType="sdr:SdrStorePageViewModel"
             x:Class="Asv.Drones.Gui.Sdr.SdrStorePageView">
    <Design.DataContext>
        <sdr:SdrStorePageViewModel/>
    </Design.DataContext>
    <Grid ColumnDefinitions="2*,30,1*">
        <sdr:SdrStoreBrowserView DataContext="{Binding Store}"/>
        <Button Grid.Column="1" Height="100" Content="{avalonia:MaterialIconExt Kind=TransferLeft}" Theme="{DynamicResource TransparentButton}" Command="{Binding DownloadRecord.Command}" />
        <sdr:SdrPayloadBrowserView Grid.Column="2" DataContext="{Binding Device}"/>
       
        
    </Grid>
    
</UserControl>
