<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uav="clr-namespace:Asv.Drones.Gui.Uav"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="380" d:DesignHeight="60"
             x:Class="Asv.Drones.Gui.Uav.Uav.MissionStatusView"
             x:CompileBindings="True"
             x:DataType="uav:MissionStatusViewModel">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ToggleButton HorizontalAlignment="Stretch" Grid.Row="0" IsChecked="{Binding EnablePolygons}">
                <avalonia:MaterialIcon Kind="LayersClear"/>
            </ToggleButton>
            <ToggleButton HorizontalAlignment="Stretch" Grid.Row="1" IsChecked="{Binding EnablePolygons}">
                <avalonia:MaterialIcon Kind="VectorPolygon"/>
            </ToggleButton>
            <ToggleButton HorizontalAlignment="Stretch" Grid.Row="2" IsChecked="{Binding EnablePolygonsAndAnchors}">
                <StackPanel Orientation="Horizontal">
                    <avalonia:MaterialIcon Kind="VectorPolygon"/>
                    <avalonia:MaterialIcon Kind="Anchor"/>
                </StackPanel>
            </ToggleButton>
        </Grid>
        <uav:MissionStatusIndicator WayPoints="{Binding WayPoints}" CurrentDistance="1"/>
    </DockPanel>
</UserControl>
